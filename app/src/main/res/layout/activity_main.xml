<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="12dp"
    tools:layout_editor_absoluteY="91dp">

    <EditText
        android:id="@+id/inpNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Nama"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/inpNama"
        app:layout_constraintStart_toStartOf="@+id/inpNama" />

    <EditText
        android:id="@+id/inpNim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/inpNama"
        app:layout_constraintTop_toBottomOf="@+id/inpNama" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="NIM"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/inpNim"
        app:layout_constraintStart_toStartOf="@+id/inpNim" />

    <EditText
        android:id="@+id/inpNoHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/inpNim"
        app:layout_constraintTop_toBottomOf="@+id/inpNim" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="nomor telepon"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/inpNoHP"
        app:layout_constraintStart_toStartOf="@+id/inpNoHP" />

    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="121dp"
        android:layout_height="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="36dp"
        android:text="SIMPAN"
        app:layout_constraintStart_toStartOf="@+id/inpNoHP"
        app:layout_constraintTop_toBottomOf="@+id/inpNoHP" />

    <Button
        android:id="@+id/btnLihat"
        android:layout_width="128dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:text="LIHAT"
        app:layout_constraintStart_toStartOf="@+id/btnSimpan"
        app:layout_constraintTop_toBottomOf="@+id/btnSimpan" />
</androidx.constraintlayout.widget.ConstraintLayout>